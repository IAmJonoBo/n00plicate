{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>IAmJonoBo/n00tropic-cerebrum//renovate/presets/workspace.json"
  ],
  "enabledManagers": [
    "npm",
    "github-actions",
    "dockerfile",
    "docker-compose",
    "devcontainer",
    "cargo"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 03:00 on monday"],
    "automerge": true,
    "automergeType": "branch"
  },
  "postUpgradeTasks": {
    "commands": ["pnpm install", "pnpm run upgrade:verify"],
    "executionMode": "update"
  },
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "devDependencies (minor+patch)",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": [
        "dependencies",
        "optionalDependencies",
        "peerDependencies"
      ],
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "groupName": "Runtime dependencies (minor+patch)",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["npm"],
      "groupName": "Nx toolchain",
      "separateMajorMinor": true,
      "matchPackageNames": ["/^@nx//", "/^nx$/", "/^@nrwl//"]
    },
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "groupName": "Nx toolchain",
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": ["/^@nx//", "/^nx$/", "/^@nrwl//"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "labels": ["ci", "dependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "groupName": "Container images",
      "separateMinorPatch": true
    },
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "groupName": "Container images",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["devcontainer"],
      "groupName": "Devcontainer templates",
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["cargo"],
      "groupName": "Rust crates",
      "labels": ["rust", "dependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
