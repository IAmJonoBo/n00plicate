{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸš€ Debug Design System",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["--filter", "@n00plicate/design-system", "run", "serve"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ðŸ§ª Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["--filter", "${input:project}", "run", "test"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ðŸ“š Debug Storybook",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["--filter", "@n00plicate/design-system", "run", "storybook"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "inputs": [
    {
      "id": "project",
      "description": "Project to debug",
      "default": "design-system",
      "type": "pickString",
      "options": ["design-system", "design-tokens", "shared-utils"]
    }
  ]
}
