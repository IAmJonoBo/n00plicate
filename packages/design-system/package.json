{
  "name": "@n00plicate/design-system",
  "version": "0.1.0",
  "type": "module",
  "description": "Qwik-based design system components using design tokens",
  "main": "dist/index.qwik.js",
  "qwik": "dist/index.qwik.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "qwik build lib",
    "build.client": "vite build",
    "build.types": "tsc --emitDeclarationOnly",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "visual-test": "loki test",
    "loki:test": "loki test --requireReference --reactUri file:./storybook-static",
    "loki:update": "loki update --requireReference --reactUri file:./storybook-static"
  },
  "dependencies": {
    "@builder.io/qwik": "^1.17.1",
    "@n00plicate/design-tokens": "workspace:*",
    "@n00plicate/tokens-core": "workspace:*",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1"
  },
  "devDependencies": {
    "@builder.io/qwik-city": "^1.17.1",
    "@nx/eslint-plugin": "^22.0.2",
    "@storybook/addon-a11y": "^10.0.2",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^10.0.2",
    "@storybook/blocks": "^8.6.14",
    "@storybook/html": "^10.0.2",
    "@storybook/html-vite": "^10.0.2",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.24.1",
    "@types/node": "^24.10.0",
    "eslint": "^9.39.0",
    "loki": "^0.35.1",
    "prettier": "^3.6.2",
    "storybook": "^10.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
